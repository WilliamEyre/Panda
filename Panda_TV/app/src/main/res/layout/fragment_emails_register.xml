<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6EBEF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="邮箱注册需要激活之后才能登陆"
        android:textColor="@color/colorBackground"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_mylogin_edit"
        android:hint="账号：请输入邮箱"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        android:textColorHint="#D0D0D0"
        android:textCursorDrawable="@drawable/mylogin_guangbiao"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hint_emails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#f00"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_mylogin_edit"
        android:hint="请输入密码"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        android:textColorHint="#D0D0D0"
        android:textCursorDrawable="@drawable/mylogin_guangbiao"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hint_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#f00"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_mylogin_edit"
        android:hint="请确认密码"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        android:textColorHint="#D0D0D0"
        android:textCursorDrawable="@drawable/mylogin_guangbiao"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hint_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#f00"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_imgCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_mylogin_edit"
            android:hint="请输入图片验证码"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:textColorHint="#D0D0D0"
            android:textCursorDrawable="@drawable/mylogin_guangbiao"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_imgCode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:gravity="center"
            android:text="图形验证码"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hint_imagecode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#f00"
        android:textSize="12sp" />

</LinearLayout>