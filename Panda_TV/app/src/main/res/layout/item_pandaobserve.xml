<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:id="@+id/line_homeShadowChina"
    android:descendantFocusability="blocksDescendants">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_homeShadowChina"
            android:layout_width="150dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/rb_PandaObserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/lpanda_bottom_gra"
            android:button="@null"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/home_play_icon"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="01:48"
            android:textColor="#fff" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_homeShadowChina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="121212"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_daytime_homeShadowChina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="121212" />

    </LinearLayout>

</LinearLayout>